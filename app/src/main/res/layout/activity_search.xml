<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:src="@drawable/dishes_bg" />

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/shadows_into_light"
        android:text="Recipe Finder"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/chewsButton"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/chews_logo" />

    <TextView
        android:id="@+id/durationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/durationSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:fontFamily="@font/shadows_into_light"
        android:text="Duration: "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/durationSpinner"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/courseSpinner"
        android:layout_marginTop="194dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/shadows_into_light"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/courseLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/courseSpinner"
        android:layout_alignEnd="@+id/durationLabel"
        android:fontFamily="@font/shadows_into_light"
        android:text="Course: "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/courseSpinner"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="266dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/shadows_into_light"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/cuisineLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cuisineSpinner"
        android:layout_alignEnd="@+id/durationLabel"
        android:fontFamily="@font/shadows_into_light"
        android:text="Cuisine: "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cuisineSpinner"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/durationSpinner"
        android:layout_marginBottom="266dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/shadows_into_light"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/holidayable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/durationLabel"
        android:layout_alignTop="@+id/holidaySpinner"
        android:fontFamily="@font/shadows_into_light"
        android:text="Holiday: "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/holidaySpinner"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/durationSpinner"
        android:layout_marginBottom="191dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/shadows_into_light"
        android:textColor="@color/colorAccent" />


    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/shadows_into_light"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Search" />


</RelativeLayout>