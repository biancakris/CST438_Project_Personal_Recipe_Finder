<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/black">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:src="@drawable/food_banner" />

    <ImageButton
        android:id="@+id/chefButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/chef" />

    <ImageButton
        android:id="@+id/fridgeButton"
        android:layout_width="331dp"
        android:layout_height="376dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/fridge" />


    <ImageButton
        android:id="@+id/chewsButton"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/chews_logo" />

    <Button
        android:id="@+id/recipeButton"
        android:layout_width="98dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/searchButton"
        android:layout_marginStart="11dp"
        android:background="@drawable/menu_buttons"
        android:fontFamily="@font/shadows_into_light"
        android:text="Recipes"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/shoppingListButton"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:background="@drawable/menu_buttons"
        android:fontFamily="@font/shadows_into_light"
        android:text="Shopping List"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="98dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/menu_buttons"
        android:fontFamily="@font/shadows_into_light"
        android:text="Search"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/myFridgeButton"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="194dp"
        android:background="@drawable/menu_buttons"
        android:fontFamily="@font/shadows_into_light"
        android:text="My Fridge"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


</RelativeLayout>