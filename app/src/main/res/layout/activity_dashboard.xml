<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@color/black">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:src="@drawable/food_banner" />

    <ImageButton
        android:id="@+id/chefButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/chef" />

    <ImageButton
        android:id="@+id/fridgeButton"
        android:layout_width="147dp"
        android:layout_height="259dp"
        android:layout_below="@+id/chefButton"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/fridge" />

    <ImageButton
        android:id="@+id/recipeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/fridgeButton"
        android:layout_toStartOf="@+id/fridgeButton"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/recipe_book" />

    <ImageButton
        android:id="@+id/shoppingListButton"
        android:layout_width="109dp"
        android:layout_height="96dp"
        android:layout_below="@+id/fridgeButton"
        android:layout_toEndOf="@+id/fridgeButton"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/shopping_list" />


    <ImageButton
        android:id="@+id/chewsButton"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/chews_logo" />


</RelativeLayout>